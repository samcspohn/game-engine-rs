{
	"version": "2.0.0",
	"options": {
		"env": {
			"RUSTFLAGS": "-Z threads=16"
		}
	},
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"args": [
				"--bin",
				"game-engine-rs",
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "rust: cargo build --bin game-engine-rs"
		},
		{
			"type": "cargo",
			"command": "build",
			"args": [
				"--bin",
				"game-engine-rs",
				"-r"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "rust: cargo build -r --bin game-engine-rs"
		},
		{
			"type":"shell",
			"command": "./find_dlls.bat release",
			"label": "find assimp",
		},
		{
			"type":"shell",
			"command": "./find_dlls.bat debug",
			"label": "find assimp debug",
		}
	]
}