{
	"version": "2.0.0",
	"options": {
		"env": {
		  "RUSTFLAGS": "-Z threads=16"
		}
	 },
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "rust: cargo build --bin game_engine_rs"
		},
		{
			"type": "cargo",
			"command": "build",
			"args": [
				"--bin", "game-engine-rs",
				"-r"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "rust: cargo build -r --bin game_engine_rs"
		},
	]
}